<greendroid.widget.itemview.DownloadedItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/gdDownloadedItemViewStyle"
    android:layout_height="wrap_content"
    android:minHeight="?attr/gdItemViewPreferredHeight"
    android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft">
    

        
     <CheckBox
        style="?attr/gdDownloadedItemViewStyleCheckBox"
        android:id="@+id/gd_dislike"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />
     
     <TextView
        style="?attr/gdDownloadedItemViewStyleCheckBoxText"
        android:id="@+id/gd_text_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end" 
        android:layout_alignLeft="@id/gd_dislike"
        android:layout_alignRight="@id/gd_dislike"
        android:layout_below="@id/gd_dislike"
        />
        

	<CheckBox
        style="?attr/gdDownloadedItemViewStyleCheckBox"
        android:id="@+id/gd_like"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/gd_dislike"
        />
        
    <TextView
        style="?attr/gdDownloadedItemViewStyleCheckBoxText"
        android:id="@+id/gd_text_like"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/gd_like"
        android:layout_alignRight="@id/gd_like"
        android:layout_below="@id/gd_like"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
        
        
    <TextView
        style="?attr/gdDownloadedItemViewStyleText"
        android:id="@+id/gd_text"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/gd_like"
        android:singleLine="true"
        android:ellipsize="end" 
        android:layout_height="wrap_content"/>

    <TextView
        style="?attr/gdDownloadedItemViewStyleSubtitle"
        android:id="@+id/gd_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/gd_like"
        android:layout_below="@id/gd_text"
        android:layout_alignLeft="@id/gd_text"
        android:singleLine="true"
        android:ellipsize="end" />
        

</greendroid.widget.itemview.DownloadedItemView>