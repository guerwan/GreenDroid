<greendroid.widget.itemview.SubtitleButtonItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/gdSubtitleItemViewStyle"
    android:layout_height="wrap_content"
    android:minHeight="?attr/gdItemViewPreferredHeight"
    android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft"
>


		 	<TextView
		        style="?attr/gdSubtitleItemViewStyleText"
		        android:id="@+id/gd_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="bottom|left"
		        android:singleLine="true"
		        android:ellipsize="end" />
			
		    <TextView
		        style="?attr/gdSubtitleItemViewStyleSubtitle"
		        android:id="@+id/gd_subtitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"	        
		        android:gravity="top|left"
		        android:singleLine="true"
		        android:ellipsize="end" 
		        android:layout_below="@id/gd_text"/>


			<TextView 
			 	android:id="@+id/button" 
			 	android:layout_gravity="right|center_vertical" 
			 	android:gravity="right"
			 	android:focusable="true" 
			 	android:layout_height="wrap_content" 
			 	style="?attr/gdButtonItemViewStyle" 
			 	android:width="100dip" 
			 	android:layout_width="wrap_content" 
			 	android:layout_centerVertical="true"
			 	android:layout_toRightOf="@id/gd_subtitle"
			 	
			 	android:layout_alignParentRight="true"/>


</greendroid.widget.itemview.SubtitleButtonItemView>
